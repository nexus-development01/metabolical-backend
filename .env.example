# Environment Configuration for Metabolical Backend API
# Copy this file to .env and modify the values as needed

# Server Configuration
PORT=80
PUBLIC_URL=https://yourdomain.com

# Database Configuration
DATABASE_PATH=data/articles.db

# API Configuration
DEBUG=false
LOG_LEVEL=info

# Metabolic Health Filtering Configuration
ENABLE_METABOLIC_FILTER=true
METABOLIC_FILTER_THRESHOLD=0.1
ENABLE_DEDUPLICATION=true
DEDUPLICATION_THRESHOLD=0.85

# CORS Configuration (already set to allow all origins in main.py)
# ALLOWED_ORIGINS=*

# Example for production deployment:
# PORT=80
# PUBLIC_URL=https://api.metabolical.com
# DEBUG=false
# LOG_LEVEL=info
# ENABLE_METABOLIC_FILTER=true
# METABOLIC_FILTER_THRESHOLD=0.1

# Example for local development:
# PORT=8000
# PUBLIC_URL=
# DEBUG=true
# LOG_LEVEL=debug
# ENABLE_METABOLIC_FILTER=true
# METABOLIC_FILTER_THRESHOLD=0.05
