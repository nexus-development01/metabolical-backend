# Metabolical Backend Environment Configuration
# Copy this file to .env and modify as needed

# =====================================
# SERVER CONFIGURATION
# =====================================
PORT=8000
HOST=127.0.0.1
DEBUG=false
LOG_LEVEL=info

# =====================================
# DATABASE CONFIGURATION
# =====================================
DATABASE_PATH=data/articles.db
DATABASE_WAL_MODE=true
DATABASE_CACHE_SIZE=64000

# =====================================
# API CONFIGURATION
# =====================================
# Allowed origins for CORS (comma-separated)
# For production, use your actual domain(s)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://metabolical.in,https://www.metabolical.in

# API rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =====================================
# SCRAPER CONFIGURATION
# =====================================
# Scraping intervals (in seconds)
QUICK_SCRAPE_INTERVAL=3600     # 1 hour
FULL_SCRAPE_INTERVAL=21600     # 6 hours

# Rate limiting for scraper
SCRAPER_DELAY=1.0              # Delay between requests in seconds
SCRAPER_MAX_RETRIES=3          # Max retry attempts
SCRAPER_TIMEOUT=30             # Request timeout in seconds

# =====================================
# SCHEDULER CONFIGURATION
# =====================================
ENABLE_SCHEDULER=true
SCHEDULER_TIMEZONE=UTC

# =====================================
# PRODUCTION SETTINGS
# =====================================
# Public URL for the API (used in docs and responses)
PUBLIC_URL=http://localhost:8000

# Security settings
SECRET_KEY=your-secret-key-here-change-in-production

# Logging configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =====================================
# OPTIONAL INTEGRATIONS
# =====================================
# Add any third-party API keys or configuration here
# EXAMPLE_API_KEY=your-api-key-here

# =====================================
# DEPLOYMENT EXAMPLES
# =====================================
# Production deployment:
# PORT=80
# HOST=0.0.0.0
# PUBLIC_URL=https://api.metabolical.com
# DEBUG=false
# LOG_LEVEL=info

# Local development:
# PORT=8000
# HOST=127.0.0.1
# DEBUG=true
# LOG_LEVEL=debug
